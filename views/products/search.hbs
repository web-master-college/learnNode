{{>header}}
<h1>{{title}}</h1>

<form method="GET">
<div class="ui huge form">
    <div class="field">
      <input name="q" placeholder="Enter Product Name" type="text" />
    </div>
  <button class="ui submit button">Search</button>
</div>
</form>

<div class="ui four cards">
  {{#each products}}
  <div class="card">
    <div class="image">
      <img src="{{this.url}}" alt="{{this.name}}" />
    </div>
<div class="content">
    <a class="header">{{this.name}}</a>
    <div class="meta">
      <span class="date">Created on {{this.createdAt}}</span>
      <span class="price">Price: ${{this.price}}</span>
    </div>
    <div class="summary">
        {{this.description}}
    </div>
</div>
    <div class="extra">
      Rating:
      <div class="ui star rating" data-rating="{{this.rating}}"></div>
    </div>
    <div class="extra content">
      <button class="ui primary button">buy</button>
  </div>
  </div>

  {{/each}} 
  </div>



{{>footer}}

